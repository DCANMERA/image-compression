page {
  background-color: #f3f3f3;
  padding-top: 280rpx;
  padding-bottom: calc(200rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
}

view {
  display: block;
  box-sizing: border-box;
}

.user-info {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  background-color: #f3f3f3;
}

.userinfo-avatar {
  overflow: hidden;
  height: 128rpx;
  width: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
}

.usermotto {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 120rpx;
  text-align: center;
  padding: 0 30rpx;
  z-index: 9;
}

.user-motto {
  padding: 20rpx 30rpx;
  font-size: medium;
  color: crimson;
  background-color: #fff;
  box-shadow: 0 4rpx 12rpx 0 rgba(0, 0, 0, .2);
  border-radius: 40rpx;
  -webkit-border-radius: 40rpx;
  -moz-border-radius: 40rpx;
  -ms-border-radius: 40rpx;
  -o-border-radius: 40rpx;
}

.message {
  font-size: 32rpx;
  font-style: italic;
  font-weight: bolder;
  color: crimson;
  text-align: center;
  margin-top: 100rpx;
}

.container {
  padding: 0 30rpx;
}

.upload-item {
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 12rpx 0 rgba(0, 0, 0, .2);
  border-radius: 20rpx;
  -webkit-border-radius: 20rpx;
  -moz-border-radius: 20rpx;
  -ms-border-radius: 20rpx;
  -o-border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.upload-img {
  margin: 0 20rpx 0 0;
  border-radius: 20rpx;
  -webkit-border-radius: 20rpx;
  -moz-border-radius: 20rpx;
  -ms-border-radius: 20rpx;
  -o-border-radius: 20rpx;
}

.upload-desc {
  height: 128rpx;
  flex: auto;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  position: relative;
}

.compression {
  color: #aaa;
  font-size: 28rpx;
}

.compression-before {
  color: dodgerblue;
  font-style: italic;
}

.compression-after {
  color: deeppink;
  font-style: italic;
}

.compression-bpp {
  color: darkorange;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
}

